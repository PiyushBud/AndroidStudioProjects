<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateInventory"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@id/add_disc"
        android:textSize="18dp"
        android:text="Name"
        />

    <TextView
        android:id="@+id/add_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:layout_below="@id/add_name"
        android:text="Description: "
        />
    <TextView
        android:id="@+id/add_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:layout_below="@id/add_disc"
        android:text="Cost: "
        />

    <TextView
        android:id="@+id/add_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:layout_below="@id/add_cost"
        android:text="Stock: "
        />

    <EditText
        android:id="@+id/add_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="18dp"
        android:layout_toRightOf="@id/add_name"
        android:layout_alignBottom="@id/add_name"
        android:layout_alignLeft="@id/add_edit_disc"
        />

    <EditText
        android:id="@+id/add_edit_disc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textSize="18dp"
        android:layout_toRightOf="@id/add_disc"
        android:layout_alignBottom="@id/add_disc"
        />

    <EditText
        android:id="@+id/add_edit_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost"
        android:textSize="18dp"
        android:layout_toRightOf="@id/add_cost"
        android:layout_alignBottom="@id/add_cost"
        android:layout_alignLeft="@id/add_edit_disc"
        />

    <EditText
        android:id="@+id/add_edit_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock"
        android:textSize="18dp"
        android:layout_toRightOf="@id/add_stock"
        android:layout_alignBottom="@id/add_stock"
        android:layout_alignLeft="@id/add_edit_disc"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_edit_stock"
        android:layout_margin="10dp"
        android:text="Add"
        android:onClick="onClickAdd"
        />


</RelativeLayout>