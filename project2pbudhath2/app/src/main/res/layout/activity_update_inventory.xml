<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateInventory">

    <TextView
        android:id="@+id/update_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:text="Name"
        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/update_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:layout_below="@id/update_name"
        android:text="Description: "
        />
    <TextView
        android:id="@+id/update_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:layout_below="@id/update_disc"
        android:text="Cost: "
        />

    <TextView
        android:id="@+id/update_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:layout_below="@id/update_cost"
        android:text="Stock: "
        />

    <EditText
        android:id="@+id/update_edit_disc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textSize="18dp"
        android:layout_toRightOf="@id/update_disc"
        android:layout_alignBottom="@id/update_disc"
        />

    <EditText
        android:id="@+id/update_edit_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost"
        android:textSize="18dp"
        android:layout_toRightOf="@id/update_cost"
        android:layout_alignBottom="@id/update_cost"
        android:layout_alignLeft="@id/update_edit_disc"
        />

    <EditText
        android:id="@+id/update_edit_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock"
        android:textSize="18dp"
        android:layout_toRightOf="@id/update_stock"
        android:layout_alignBottom="@id/update_stock"
        android:layout_alignLeft="@id/update_edit_disc"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_edit_stock"
        android:layout_margin="10dp"
        android:text="Update"
        android:onClick="onClickUpdate"
        />


</RelativeLayout>